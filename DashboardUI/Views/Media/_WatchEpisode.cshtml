@model SDNMediaModels.Television.TelevisionEpisodeModel

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" style="text-align: center;"><b>Playing:</b> @Model.EpisodeDisplayTitle </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="demo-section k-content wide" style="max-width: 800px;">
                        @(Html.Kendo().MediaPlayer()
                                                                .Navigatable(true)
                                                                .Media(m => m
                                                                    .Title(Model.EpisodeDisplayTitle)
                                                                    .Source(Model.EpisodePlayerPath)
                                                                    )

                                                                .Name("mediaPlayer")
                                                                .HtmlAttributes(new { style = "height:500px" })
                        )
                    </div>
                </div>
            </div>